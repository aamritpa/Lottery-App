<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e6e1"
    tools:context=".Payment">

    <Button
        android:id="@+id/payButton"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#4CBB17"
        android:text="@string/proceed_to_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalizedAmount" />

    <TextView
        android:id="@+id/finalizedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="205dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="206dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout4" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#256B85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <TextView
            android:id="@+id/finalizedNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#256B85"
            android:padding="10sp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/finalizedNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#256B85"
            android:padding="10sp"
            android:text="2"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#256B85"
            android:padding="10sp"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#256B85"
            android:padding="10sp"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#256B85"
            android:padding="10sp"
            android:text="5"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_column="4"
            app:layout_row="0" />

        <TextView
            android:id="@+id/finalizedNumber6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#256B85"
            android:padding="10sp"
            android:text="@string/_6"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_column="5"
            app:layout_row="0" />

        <TextView
            android:id="@+id/finalizedNumber7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#256B85"
            android:padding="10sp"
            android:text="@string/_7"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_column="6"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#256B85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <TextView
            android:id="@+id/finalizedNumber8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/_8"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/finalizedNumber9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="10"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="11"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="12"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_column="4"
            app:layout_row="0" />

        <TextView
            android:id="@+id/finalizedNumber13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="13"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="14"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:background="#256B85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2">

        <TextView
            android:id="@+id/finalizedNumber15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="15"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/finalizedNumber16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="16"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="18"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="19"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="20"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_column="4"
            app:layout_row="0" />

        <TextView
            android:id="@+id/finalizedNumber20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="21"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="22"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:background="#256B85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23">

        <TextView
            android:id="@+id/finalizedExtra1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="A"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/finalizedExtra2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="B"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedExtra3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="C"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_column="2"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:background="#e7e6e1"
        android:gravity="center"
        android:text="Numbers Selected"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameID" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:background="#e7e6e1"
        android:gravity="center"
        android:text="Extra's Selected"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/gameID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:gravity="center"
        android:padding="10sp"
        android:text="Which Game?"
        android:textColor="#f2a154"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="170dp" />

    <ImageView
        android:id="@+id/goBacktoGame"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:contentDescription="TODO"
        android:onClick="goBack"
        android:padding="5sp"
        app:layout_constraintBottom_toBottomOf="@+id/gameID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test"
        app:tint="@android:color/white" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="34dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout3" />

</androidx.constraintlayout.widget.ConstraintLayout>