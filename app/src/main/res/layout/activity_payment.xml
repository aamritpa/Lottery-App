            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="12"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_column="4"
            app:layout_row="0" />

        <TextView
            android:id="@+id/finalizedNumber13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:text="13"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/finalizedNumber14"
            android:layout_width="wrap_content"
