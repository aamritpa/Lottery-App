<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e6e1"
    tools:context=".Login">

    <GridLayout
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.358"><![CDATA[>

        ]]>

        <TextView
            android:id="@+id/emailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="left"
            android:padding="10sp"
            android:text="Email"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="10sp"
            android:text="Password"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="209dp"
            android:layout_height="38dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/border_bottom"
            android:ems="10"
            android:inputType="textPersonName"
            android:soundEffectsEnabled="false"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/border_bottom"
            android:ems="10"
            android:fadingEdge="horizontal|vertical"
            android:inputType="textPassword"
            android:lineSpacingExtra="8sp"
            android:textColor="@android:color/black" />
    </GridLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="108dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#4CBB17"
        android:onClick="toMainPage"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Forgot Password?"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="52dp"
        android:background="#212A61"
        android:onClick="toRegister"
        android:text="New Users? Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="407dp"
        android:layout_height="72dp"
        android:background="#e7e6e1"
        android:gravity="center"
        android:text="Login"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridView"
        app:layout_constraintEnd_toEndOf="@+id/gridView"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/gridView"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="103dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:background="#212A61"
        android:clickable="false"
        android:gravity="center"
        android:onClick="resetPassword"
        android:padding="10sp"
        android:text="RESET"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bigdraw" />

</androidx.constraintlayout.widget.ConstraintLayout>